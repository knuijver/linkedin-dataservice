            </div>
            <div class="form-group">
                <label asp-for="LinkedInProvider.ClientId" class="control-label"></label>
                <input asp-for="LinkedInProvider.ClientId" class="form-control" />
                <span asp-validation-for="LinkedInProvider.ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkedInProvider.ClientSecret" class="control-label"></label>
                <input asp-for="LinkedInProvider.ClientSecret" class="form-control" />
                <span asp-validation-for="LinkedInProvider.ClientSecret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkedInProvider.AuthorizationEndpoint" class="control-label"></label>
                <input asp-for="LinkedInProvider.AuthorizationEndpoint" class="form-control" />
                <span asp-validation-for="LinkedInProvider.AuthorizationEndpoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkedInProvider.TokenEndpoint" class="control-label"></label>
                <input asp-for="LinkedInProvider.TokenEndpoint" class="form-control" />
                <span asp-validation-for="LinkedInProvider.TokenEndpoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkedInProvider.Scope" class="control-label"></label>
                <input asp-for="LinkedInProvider.Scope" class="form-control" />
                <span asp-validation-for="LinkedInProvider.Scope" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="LinkedInProvider.IsActive" /> @Html.DisplayNameFor(model => model.LinkedInProvider.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
