<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LinkedInProvider.Id" class="control-label"></label>
                <input asp-for="LinkedInProvider.Id" class="form-control" readonly />
                <span asp-validation-for="LinkedInProvider.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkedInProvider.ApplicationName" class="control-label"></label>
