@page "{id}"
@model SAWebHost.Pages.Tokens.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>AccessTokenEntry</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccessTokenEntry.AccessToken)
        </dt>
        <dd class="col-sm-10">
            <textarea asp-for="AccessTokenEntry.AccessToken" style="width:100%" rows="5"></textarea>            
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccessTokenEntry.ExpiresIn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccessTokenEntry.ExpiresIn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccessTokenEntry.RefreshToken)
        </dt>
        <dd class="col-sm-10">
            <textarea asp-for="AccessTokenEntry.RefreshToken" style="width:100%" rows="5"></textarea>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccessTokenEntry.RefreshTokenExpiresIn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccessTokenEntry.RefreshTokenExpiresIn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccessTokenEntry.CreatedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccessTokenEntry.CreatedOn)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.AccessTokenEntry.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
